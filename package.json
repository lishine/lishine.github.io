{
    "name": "personal",
    "author": "Pavel Ravits",
    "license": "ISC",
    "scripts": {
        "now-logs": "now logs -f do-salsa.tk",
        "now-deploy": "cd api && yarn build && cd .. && now --target production && yarn now-logs",
        "docker-clean": "docker stop $(docker ps -aq) && docker rm $(docker ps -aq) && docker rmi --force $(docker images -q) && docker volume rm $(docker volume ls -q)",
        "adm": "node scripts/apply-deploy-migrations.js",
        "emails-gen": "cd emails-generator && yarn gen",
        "now-update": "yarn global add now@canary",
        "db-console": "set -o allexport; source ./.env; set +o allexport && cd db && hasura console --admin-secret $HASURA_GRAPHQL_ADMIN_SECRET",
        "db-up": "set -o allexport; source ./.env; set +o allexport && cd db && echo $HASURA_GRAPHQL_ADMIN_SECRET && docker-compose up -d --remove-orphans",
        "db-down": "cd db && docker-compose down"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/plugin-proposal-export-default-from": "^7.2.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.1",
        "babel-plugin-emotion": "^10.0.5",
        "babel-plugin-module-resolver": "^3.1.1",
        "eslint": "^5.5.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-prettier-standard": "^2.0.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-config-standard-react": "^7.0.2",
        "eslint-import-resolver-babel-module": "^4.0.0",
        "eslint-import-resolver-node": "^0.3.2",
        "eslint-plugin-flow-check": "^1.2.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-prettier": "^2.6.2",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-react": "^7.12.2",
        "eslint-plugin-standard": "^4.0.0",
        "prettier": "^1.14.2",
        "prettier-stylelint": "^0.4.2",
        "stylelint": "^9.10.1",
        "stylelint-config-idiomatic-sass": "^1.0.0",
        "stylelint-config-prettier": "^4.0.0",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-prettier": "^1.0.6",
        "stylelint-processor-styled-components": "^1.5.2",
        "stylelint-scss": "^3.5.1"
    },
    "dependencies": {
        "dotenv": "^6.2.0"
    }
}